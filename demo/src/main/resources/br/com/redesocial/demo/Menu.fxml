<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.redesocial.demo.MenuController">
    <left>
        <VBox spacing="10" alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <Button text="Adicionar Amigo" minWidth="150" onAction="#handleAddFriend"/>
            <Button text="Listar Amigos" minWidth="150" onAction="#handleListFriends"/>
            <Button text="Excluir Amigo" minWidth="150" onAction="#handleDeleteFriend"/>
            <Button text="Bate Papo" minWidth="150" onAction="#handleChat"/>
            <Label maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
            <Button text="Logout" minWidth="150" onAction="#handleLogout" VBox.margin="10 0 0 0"/>
        </VBox>
    </left>
    <center>
        <!-- O conteúdo da área central pode ser adicionado aqui -->
    </center>
</BorderPane>
